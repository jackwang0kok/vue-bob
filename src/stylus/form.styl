.form-cells
  background transparent

.form-cell
  border-radius 5px
  box-shadow 0 0 5px 2.5px rgba(36, 114, 255, 0.1)
  line-height 45px
  font-size 14px
  background #fff

  &:after
    display none

  & + .form-cell
    margin-top 15px

  &.code-cell .form-input
    text-align left

.form-label
  display block
  line-height 45px

.form-input
  height 45px
  text-align right
  font-size 14px
  color #333

.form-button
  display inline-block
  border 1px solid #2472ff
  border-radius 5px
  padding 0 7.5px
  line-height 28px
  font-size 12px
  color #2472ff

.form-checkbox
  position relative
  width 16px
  height 16px
  border 1px solid #2472ff
  border-radius 50%
  margin-right 10px
  appearance none
  vertical-align middle
  color #999

  &:after
    content ''
    position absolute
    top 50%
    left 50%
    display inline-block
    width 10px
    height 10px
    border-radius 50%
    transform translate(-50%, -50%) scale(.5)
    transition all .2s

  &:checked:after
    color #2472ff
    background #2472ff
    transform translate(-50%, -50%)

.form-switch
  position relative
  width 40px
  height 20px
  border-radius 10px
  appearance none
  vertical-align middle
  color #999
  background #bac6da
  transition all .2s

  &:before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display inline-block
    border-radius 10px
    background #b8c4d7
    transition all .2s

  &:after
    content ''
    position absolute
    top 0
    left 0
    display inline-block
    width 20px
    height 20px
    border-radius 50%
    box-shadow 2px 2px 4px rgba(0, 0, 0, .21)
    background #fff
    transition all .2s

  &:checked
    color #5492f4
    background #5492f4

  &:checked:before
    transform scale(0)

  &:checked:after
    transform translateX(20px)

.form-help
  margin 25px 0
  line-height 1.5
  text-align center
  font-size 14px
  color #333

  a
    color #3c99ff

.form-tips
  margin-top 15px

.button
  display block
  box-shadow 0 1px 4px 0 rgba(31, 32, 33, .04)
  border-radius 4px
  line-height 40px
  text-align center
  font-size 16px
  color #333
  background #fff
