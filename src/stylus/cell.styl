@import "mixins.styl"

.cell
  position relative
  display flex
  align-items center
  width 100%
  height 45px
  padding 0 15px
  line-height 20px
  font-size 16px
  color #333

  &.is-access
    .cell-ft:after
      content ''
      position absolute
      top 50%
      right 15px
      display inline-block
      width 8px
      height 8px
      border-top 1px solid #ddd
      border-right 1px solid #ddd
      margin-top -5px
      transform rotate(45deg)

.cell-hd, .cell-ft
  flex-shrink 0

.cell-hd
  width 24px
  height 24px
  margin-right 15px

.cell-bd
  flex 1
  min-width 100%

.cell-ft
  font-size 12px
  color #999

.cell-desc
  font-size 12px
  color #999



