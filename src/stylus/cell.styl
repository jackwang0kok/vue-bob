@import "variable.styl"
@import "mixins.styl"

.cells
  position relative
  margin-top 10px
  line-height 1.5
  font-size $font-size-large
  background #fff
  top-1px-border($color-border)


.cell
  position relative
  display flex
  justify-content flex-start
  align-items center
  padding 0 15px 0 20px
  color $color-dark

  &:not(:last-child)
    &:after
      content ''
      position absolute
      right 0
      bottom 0
      left 0
      height 1px
      border-bottom 1px solid $color-border
      transform-origin 0 100%
      transform scaleY(.5)

  &.is-access
    &:active
      background $color-border

    .cell-ft
      &:after
        content ''
        position absolute
        top 50%
        right 30px
        display inline-block
        width 8px
        height 8px
        border-top 2px solid $color-border
        border-right 2px solid $color-border
        margin-top -5px
        transform rotate(45deg)

.cell-hd
  width 22px
  height 22px
  margin 0 15px 0 10px

.cell-bd
  padding 15px 0
  font-size 11px
  display: flex;
  flex-direction: column;
  flex 1


.cell-ft
  margin-right 5px
  font-size $font-size-small
  color $color-light



